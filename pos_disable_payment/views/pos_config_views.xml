<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="pos_config_form_view_inherited" model="ir.ui.view">
    <field name="name">pos.config.form.view inherited</field>
    <field name="model">pos.config</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
    <field name="priority" eval="32"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='features']" position="after">
        <group string="Access Control">
          <group>
            <field name="iface_allow_create_order_line"/>
            <field name="iface_allow_payments"/>
            <field name="iface_allow_delete_order"/>
          </group>
          <group>
            <field name="iface_allow_discount" attrs="{'invisible':[('iface_allow_create_order_line','=',False)]}"/>
            <field name="iface_allow_edit_price" attrs="{'invisible':[('iface_allow_create_order_line','=',False)]}"/>
            <field name="iface_allow_refund" attrs="{'invisible':[('iface_allow_create_order_line','=',False)]}"/>
            <field name="iface_allow_delete_order_line" attrs="{'invisible':['|',('iface_allow_decrease_amount','=',False),('iface_allow_create_order_line','=',False)]}"/>
            <field name="iface_allow_decrease_amount" attrs="{'invisible':[('iface_allow_create_order_line','=',False)]}"/>
          </group>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
